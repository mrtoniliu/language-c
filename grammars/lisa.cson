'scopeName': 'source.lisa'
'fileTypes': [
  'lisa'
]
'firstLineMatch': '-\\*-\\s*([Mm]ode: )?C\\+\\+;?\\s*-\\*-'
'name': 'LISA+'
'patterns':[
  {
    'include': '#special_block'
  }
  {
    'include': 'source.cpp'
  }
  {
    'match': '\\b(master|slave|peer)\\b'
    'name': 'variable.lisa'
  }
  {
    'match': '\\b(component|resources|properties|composition|behaviour|behavior|debug|includes|connection)\\b'
    'name': 'keyword.other.unit.lisa'
  }
  {
    'match' : '\\b(PARAMETER|REGISTER|MEMORY)\\b'
    'name' : 'storage.lisa'
  }
  {
    'match' : '\\b(MSG_FATAL_ERROR|MSG_ERROR|MSG_WARNING|MSG_INFO|MSG_DEBUG)\\b'
    'name' : 'constant.message.lisa'
  }
]
